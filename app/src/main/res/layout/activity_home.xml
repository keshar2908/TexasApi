<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitis.HomeActivity"
    android:id="@+id/drawerlayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/mSlider"
            android:layout_centerHorizontal="true"
            >
        </ViewFlipper>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_dashboard_menu"
        android:layout_gravity="start"
        android:id="@+id/navigation_view"
        android:background="@color/navigationview"
        app:headerLayout="@layout/nevigation_header"
        app:itemTextColor="#ffffff"
        app:itemIconPadding="12dp">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>